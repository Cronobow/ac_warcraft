<script type="text/javascript">
  <% if notice %>
    $.notify({
      message : '<%= notice %>',
      status  : 'warning',
      timeout : 5000,
      pos     : 'top-center'
    });
    // pos: 'top-center', 'top-left', 'top-right', 'bottom-center', 'bottom-left', 'bottom-right'
  <% end %>
  <% if alert %>
    $.notify({
      message : '<%= alert %>',
      status  : 'danger',
      timeout : 5000,
      pos     : 'top-center'
    });
    // pos: 'top-center', 'top-left', 'top-right', 'bottom-center', 'bottom-left', 'bottom-right'
  <% end %>
</script>

