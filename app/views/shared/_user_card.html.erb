<div class="card user-card mb-2" >
  <div class="row">
    <div class="col-5 pr-0">
      <div class="card-body h-100 card-img-left p-1 d-flex align-items-end" style="background-image: url(<%= user.avatar_url if user.avatar_url %>);" >
        <span class="badge badge-light">L<%= user.level %></span>
      </div>
    </div>
    <div class="col-7 pl-0">
      <div class="card-body p-2">
        <h5 class="card-title"><%= link_to user.name, user_path(user) %></h5>
        <p class="card-text">
          資訊 1 <br>
          資訊 2 <br>
          上次上線：<br>
          <%= time_ago_in_words(user.current_sign_in_at) + ' ago' if user.current_sign_in_at %>
        </p>
      </div>
    </div>
  </div>
</div>
