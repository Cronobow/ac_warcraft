<div class="card mb-2" >
  <div class="row">
    <div class="col-5 pr-0">
      <div class="card-body h-100 card-img-left" style="background-image: url(<%= user.avatar_url if user.avatar_url %>);" ></div>
    </div>
    <div class="col-7 pl-0">
      <div class="card-body p-2">
        <h5 class="card-title"><%= link_to user.name, user_path(user) %></h5>
        <p class="card-text">
            等級 <br>
            其他資訊 <br>
            上次上線：<%= time_ago_in_words(user.current_sign_in_at) + ' ago login' if user.current_sign_in_at %>
        </p>
      </div>
    </div>
  </div>
</div>
