<%= render partial: "member_info", locals:{members: @members} %>

<div class="row mb-4">
  <div class="col-12">
    <h3>已經送出邀請</h3>
  </div>
  <% @invitations.each do |invitation| %>
    <div class="col-xs-12 col-sm-6 col-lg-4 col-xl-3 my-3">
      <%= render partial:"shared/user_card" , locals: {user: invitation.invitee} %>
      <%= link_to '聊聊', invitation_path(invitation), remote: true, class: 'btn btn-primary' %>
      <%= link_to '取消邀請', cancel_invitation_path(invitation), method: :post, class: 'btn btn-danger' %>
    </div>
  <% end %>
</div>

<div class="row mb-4">
  <div class="col-12">
    <h3>可選隊員 </h3>
    <h5><span class="badge badge-info">你還可發送 <%=@remaining_invitations_count%> 張邀請</span></h5>
  </div>
</div>

<div class="row mb-4 ">
  <div class="col bg-light card mx-3">
    <%= form_for_filterrific @filterrific do |f| %>
    <div class="form-row card-body">
        <div class="col-md-3 form-group" data-intro="Search by name or email." data-position="top">
          <label>Search</label>
          <%= f.text_field :search_query, class: "form-control" %>
        </div>

        <div class="form-group col-md-3" >
          <label>Gender</label>
          <%= f.select(:with_gender, @filterrific.select_options[:with_gender],
            { include_blank: '- 不限 -' }, {class: "form-control"}
          ) %>
        </div>

        <div class="form-group col-md-3" >
          <label>Level</label>
          <%= f.select(:range_level, @filterrific.select_options[:range_level],
            { include_blank: '- 不限 -' }, {class: "form-control"}
          ) %>
        </div>

        <div class="form-group col-md-3" >
          <label>Sorted by</label>
          <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by],{}, {class: "form-control"} ) %>
        </div>
      </div>
      <%= render_filterrific_spinner %>
    <% end %>
  </div>
</div>

<%= render( partial: 'candidates_list', locals: { candidates: @candidates } ) %>

<div class="modal fade" id="invitation_model" tabindex="-1" role="dialog" aria-labelledby="ShowMissionModal" aria-hidden="true"></div>
