<%= render partial: "member_info", locals:{members: @members} %>

<div class="row mb-3">
  <div class="col-12">
    <h3>已經送出邀請</h3>
  </div>
  <% @invitations.each do |invitation| %>
    <div class="col-md-3">
      <%= link_to invitation.invitee do %>
        <%= image_tag invitation.invitee.avatar_url, class: "img-responsive center-block small" if invitation.invitee.avatar_url %>
        <%= invitation.invitee.name %>
      <% end %>
    <div class="btn btn-primary disabled">送出邀請中</div>
    <%= link_to '聊聊', invitation_path(invitation), class: 'btn btn-primary' %>
    <%= button_to '取消邀請', cancel_invitation_path(invitation), class: 'btn btn-danger' %>
    </div>
  <%end%>
</div>

<div class="row mb-3">
  <div class="col-12">
    <h3>可選隊員</h3>
  </div>
  <% @candidates.each do |candidate| %>
    <div class="col-md-3">
      <%= link_to candidate do %>
        <%= image_tag candidate.avatar_url, class: "img-responsive center-block small" if candidate.avatar_url %>
        <%= candidate.name %>
      <% end %>
      <%= button_to "invite" , invite_user_path(candidate), params: {instance_id: @instance.id} %>
    </div>
  <% end %>
</div>
