<%= render partial: "member_info", locals:{members: @members} %>

<div class="row mb-4">
  <div class="col-12">
    <h3>已經送出邀請</h3>
  </div>
  <% @invitations.each do |invitation| %>
    <div class="col-md-3 my-3">
      <%= render partial:"shared/user_card" , locals: {user: invitation.invitee} %>
      <%= link_to '聊聊', invitation_path(invitation), class: 'btn btn-primary' %>
      <%= link_to '取消邀請', cancel_invitation_path(invitation), class: 'btn btn-danger' %>
    </div>
  <% end %>
</div>

<div class="row mb-4">
  <div class="col-12">
    <h3>可選隊員</h3>
  </div>
  <% @candidates.each do |user| %>
    <div class="col-md-3 my-3">
      <%= render partial:"shared/user_card" , locals: {user: user} %>
      <%= link_to "邀請" , invite_user_path(user), params: {instance_id: @instance.id}, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
