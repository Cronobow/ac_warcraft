<div class="row mb-4">
  <div class="col-12">
    <h4>副本訊息</h4>
  </div>
  <div class="col">
    <ul>
      <% @instance_msgs.each do |msg| %>
        <li><%= msg.user.name %> 說： <%=simple_format msg.content %></li>
      <% end %>
    </ul>
  </div>
</div>

<% if @instance.state == 'in_progress' %>
  <%= simple_form_for @instance_msg ,url: instance_instance_msgs_path(@instance) do |f| %>
    <%= f.input :content, label: false, placeholder:'聊聊天吧...'%>
    <%= f.button :submit, '送出', class:"btn btn-primary" %>
  <%end%>
<% end %>
