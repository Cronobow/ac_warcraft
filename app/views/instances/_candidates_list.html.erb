<div id="filterrific_results" >
  <div class="rowmb-4">
    <div class="col card bg-light ">
      <div class="card-body d-flex justify-content-between p-3">
        <p><%= page_entries_info candidates  %></p>
        <%= link_to 'Reset filters', reset_filterrific_url, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <% candidates.each do |user| %>
      <div class="col-xs-12 col-sm-6 col-lg-4 col-xl-3 my-3" id="filterrific_results">
        <%= render partial:"shared/user_card" , locals: {user: user} %>
        <%= button_to "邀請" , invite_user_path(user), remote: true, params: {instance_id: @instance.id},  class: "btn btn-primary" if @remaining_invitations_count > 0 %>
        <%= user_aleary_done(@instance, user) %>
        <%= user_in_progress(@instance, user) %>
      </div>
    <% end %>
  </div>
</div>
