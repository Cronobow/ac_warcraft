<div class="container">
  <h1>mission#index</h1>

  <!-- show mission -->
  <% @missions.each do |mission| %>
    <div style="border:1px solid #b0b0b0">
      <div style="width:100px">
        <%= image_tag mission.image_url, class: "img-fluid" %>
      </div>
      <ul>
        <li><%= link_to mission.name, mission_path(mission) %></li>
        <li>難度等級 <%= mission.level %></li>
        <li>人數 <%= mission.participant_number %></li>
      </ul>
    </div>
  <%end%>
  <!-- show mission end -->

  <%= paginate @missions %>
</div>