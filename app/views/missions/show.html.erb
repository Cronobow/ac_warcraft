<aside class="aside-container">
  <%= render partial: "layouts/sidebar" %>
</aside>
<aside class="offsidebar d-none">
  <%= render partial: "layouts/right_sidebar" %>
</aside>
<section>
  <div class="section-container">
    <div class="content-wrapper">
      <div class="content-heading">
        <h3><%= title @mission.name %></h3>
      </div>
      <div class="">
        <%=image_tag @mission.image_url %>
      </div>
      <div class="">
        <ul>
          <li>任務名稱: <%=@mission.name%></li>
          <li>等級: <%= @mission.level%></li>
          <li>參加人數：<%= @mission.participant_number %></li>
          <li>你還可發送 <%= @mission.invitation_number %> 張邀請</li>
          <li>任務內容：<%= simple_format @mission.description %></li>
        </ul>
      </div>
      <%= link_to "回首頁", root_path, class:"btn btn-secondary"%>
      <%= challenge_button(@mission) %>
    </div>
  </div>
</section>
