<div class="container">
  <div class="">
    <%=image_tag @mission.image_url %>
  </div>
  <div class="">
    <ul>
      <li>任務名稱: <%=@mission.name%></li>
      <li>等級: <%= @mission.level%></li>
      <li>參加人數：<%= @mission.participant_number %></li>
      <li>你還可發送 <%= @mission.invitation_number %> 張邀請</li>
      <li>任務內容：<%= simple_format @mission.description %></li>
    </ul>
  </div>
  <%= link_to "回首頁", root_path, class:"btn btn-secondary"%>
  <!-- 如果等級符合 -->
  <%= link_to "挑戰任務", challenge_mission_path(@mission), method: :post, class: "btn btn-primary" %>
</div>